{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true, // 不允许隐式的any类型
        "removeComments": true,  // 是否移除注释
        "preserveConstEnums": true,
        "outDir": "./packages/vive-mini"
    },
    "include": [
        "packages/vive/src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "docs/**/*",
        "packages/vive-mini/",
        "playground"
    ]
}